@model IEnumerable<Tengella.Survey.Data.Models.SurveyTemplate>

@{
    ViewData["Title"] = "Survey Templates";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Survey Templates</h1>
    </div>

    <div class="table-container">
        <h2 class="mb-4">All Survey Templates</h2>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.TemplateName)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TemplateName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td class="nowrap">
                            <a class="btn btn-primary btn-sm" asp-action="CreateFromTemplate" asp-route-templateId="@item.SurveyTemplateId">Use Template</a>
                            <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.SurveyTemplateId">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.SurveyTemplateId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>