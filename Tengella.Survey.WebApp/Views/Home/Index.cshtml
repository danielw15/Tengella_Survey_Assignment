@model IEnumerable<Tengella.Survey.WebApp.Models.SurveyViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <div class="text-center my-5">
            <h1 class="display-4">Welcome to Tengella Surveys</h1>
            <p>
                Explore the features of our advanced survey management system. <br>
                Learn more about <a href="https://docs.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a>.
            </p>
        </div>

        <div class="features-section text-center my-5">
            <h2 class="mb-4">Features</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="icon">
                            <i class="bi bi-bar-chart"></i>
                        </div>
                        <h5>Create Surveys</h5>
                        <p>Easily create and customize surveys to suit your needs.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h5>Manage Users</h5>
                        <p>Efficiently manage user information and survey participation.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="icon">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <h5>Analyze Results</h5>
                        <p>Get detailed analytics and insights from survey responses.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="survey-preview-section my-5">
            <h2 class="text-center mb-4">Survey Previews</h2>
            <div class="row">
                @foreach (var survey in Model)
                {
                    <div class="col-md-4">
                        <div class="card survey-card">
                            <div class="card-body">
                                <h5 class="card-title">@survey.SurveyTitle</h5>
                                <p class="card-text">@survey.SurveyDescription</p>
                                <a href="@Url.Action("Details", "SurveyObjects", new { id = survey.SurveyObjectId })" class="btn btn-primary">View Survey</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>